// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  userName  String      @unique
  email     String      @unique
  password  String
  followers Followers[]
  review    Review[]

  @@map("users")
}

model Followers {
  id          Int  @id @default(autoincrement())
  user        User @relation(fields: [userId], references: [id])
  userId      Int
  followingId Int

  @@map("followers")
}

model Review {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
  movieId Int
  comment String
  grade   Int

  @@map("review")
}
